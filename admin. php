        <ul class="nav flex-column">
            <li class="nav-item">
                <a class="nav-link <?php echo ($action == 'dashboard') ? 'active' : ''; ?>" href="admin.php?action=dashboard">
                    <i class="fas fa-tachometer-alt me-2"></i>الرئيسية
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <?php echo ($action == 'channels' || $action == 'add_channel') ? 'active' : ''; ?>" href="admin.php?action=channels">
                    <i class="fas fa-tv me-2"></i>القنوات (<?php echo $channels_count; ?>)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link <?php echo ($action == 'subscribers' || $action == 'add_subscriber') ? 'active' : ''; ?>" href="admin.php?action=subscribers">
                    <i class="fas fa-users me-2"></i>المشتركون (<?php echo $users_count; ?>)
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="admin.php?action=packages">
                    <i class="fas fa-box me-2"></i>الحزم/الباقات
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-danger mt-3" href="logout.php">
                    <i class="fas fa-sign-out-alt me-2"></i>تسجيل الخروج
                </a>
            </li>
        </ul>
    </div>

    <div class="content flex-grow-1 p-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><?php 
                if ($action == 'dashboard') echo 'لوحة القيادة';
                else if ($action == 'channels') echo 'إدارة القنوات';
                else if ($action == 'subscribers') echo 'إدارة المشتركين';
                else if ($action == 'add_channel') echo 'إضافة قناة جديدة';
                else if ($action == 'add_subscriber') echo 'إضافة مشترك جديد';
                else echo 'الإدارة';
            ?></h1>
            <?php if ($action == 'channels'): ?>
                <a href="admin.php?action=add_channel" class="btn btn-primary"><i class="fas fa-plus"></i> إضافة قناة</a>
            <?php endif; ?>

            <?php if ($action == 'subscribers'): ?>
                <a href="admin.php?action=add_subscriber" class="btn btn-success"><i class="fas fa-user-plus"></i> إضافة مشترك</a>
            <?php endif; ?>
        </div>

        <?php if ($error_message): ?>
            <div class="alert alert-danger" role="alert"><?php echo $error_message; ?></div>
        <?php endif; ?>
        <?php if ($success_message): ?>
            <div class="alert alert-success" role="alert"><?php echo $success_message; ?></div>
        <?php endif; ?>

        <?php if ($action == 'dashboard'): ?>
            <div class="row">
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-body">
                            <h5 class="card-title">إجمالي القنوات</h5>
                            <p class="card-text fs-2"><?php echo $channels_count; ?></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <h5 class="card-title">إجمالي المشتركين</h5>
                            <p class="card-text fs-2"><?php echo $users_count; ?></p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-info mb-3">
                        <div class="card-body">
                            <h5 class="card-title">مشتركون نشطون</h5>
                            <p class="card-text fs-2"><?php echo $active_users_count; ?></p>
                        </div>
                    </div>
                </div>
            </div>
        <?php endif; ?>

        <?php if ($action == 'channels' || $action == 'add_channel'): ?>
            <?php if ($action == 'add_channel'): ?>
                <div class="card p-4 mb-4">
                    <h4>إضافة قناة جديدة</h4>
                    <form action="admin.php?action=add_channel" method="POST">
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="name" class="form-label">اسم القناة</label>
                                <input type="text" class="form-control" id="name" name="name" required>
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="url" class="form-label">رابط البث (URL)</label>
                                <input type="url" class="form-control" id="url" name="url" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="mb-3 col-md-6">
                                <label for="category" class="form-label">التصنيف</label>
                                <input type="text" class="form-control" id="category" name="category">
                            </div>
                            <div class="mb-3 col-md-6">
                                <label for="user_agent" class="form-label">User-Agent</label>
                                <input type="text" class="form-control" id="user_agent" name="user_agent" value="Mozilla/5.0">
                            </div>
                        </div>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> حفظ القناة</button>
                        <a href="admin.php?action=channels" class="btn btn-secondary">إلغاء</a>
                    </form>
                </div>
            <?php endif; ?>

            <?php if ($action == 'channels'): ?>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>الاسم</th>
                            <th>التصنيف</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php if (empty($channels)): ?>
                            <tr><td colspan="5" class="text-center">لا توجد قنوات مضافة حالياً.</td></tr>
                        <?php else: ?>
                            <?php foreach ($channels as $channel): ?>
                            <tr>
                                <td><?php echo htmlspecialchars($channel['id']); ?></td>
                                <td><?php echo htmlspecialchars($channel['name']); ?></td>
                                <td><span class="badge bg-secondary"><?php echo htmlspecialchars($channel['category'] ?? 'عام'); ?></span></td>
                                <td><?php echo $channel['enabled'] ? '<span class="badge bg-success">مفعل</span>' : '<span class="badge bg-danger">معطل</span>'; ?></td>
                                <td>
                                    <a href="#" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> تعديل</a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> حذف</a>
                                </td>
                            </tr>
                            <?php endforeach; ?>
                        <?php endif; ?>
                    </tbody>
                </table>
            <?php endif; ?>
        <?php endif; ?>

        <?php if ($action == 'subscribers' || $action == 'add_subscriber'): ?>

            <?php if ($action == 'add_subscriber'): ?>
                <div class="card p-4 mb-4">
                    <h4>نموذج إضافة مشترك</h4>
                    <form action="admin.php?action=add_subscriber" method="POST">
                        <div class="mb-3">
                            <label for="username" class="form-label">اسم المستخدم</label>
                            <input type="text" class="form-control" id="username" name="username" required>
                        </div>
                        <div class="mb-3">
                            <label for="duration_days" class="form-label">مدة الاشتراك (بالأيام)</label>
                            <input type="number" class="form-control" id="duration_days" name="duration_days" value="30" min="1" required>
                            <div class="form-text">سيتم تحديد تاريخ الانتهاء بناءً على هذا العدد من الأيام.</div>
                        </div>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> حفظ المشترك</button>
                        <a href="admin.php?action=subscribers" class="btn btn-secondary">إلغاء</a>
                    </form>
                </div>
            <?php endif; ?>

            <?php if ($action == 'subscribers'): ?>
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th>اسم المستخدم</th>
                            <th>تاريخ الانتهاء</th>
                            <th>الحالة</th>
                            <th>رابط M3U</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        <?php 
                        $host = $_SERVER['HTTP_HOST'];
                        $now = new DateTime('now');
                        if (empty($users)): ?>
                            <tr><td colspan="6" class="text-center">لا يوجد مشتركين مضافين حالياً.</td></tr>
                        <?php else: ?>
                            <?php foreach ($users as $subscriber): 
                                $expiry_date_str = $subscriber['expiry_date'] ?? 'N/A';
                                $expiry = ($expiry_date_str !== 'N/A') ? new DateTime($expiry_date_str) : null;
                                $is_expired = ($expiry) ? ($expiry < $now) : false;
                                $status_badge = $is_expired ? '<span class="badge bg-danger">منتهي</span>' : '<span class="badge bg-success">نشط</span>';
                                $m3u_link = "http://{$host}/m3u.php?username=" . urlencode($subscriber['username']) . "&password=" . urlencode($subscriber['token']);
                            ?>
                            <tr>
                                <td><?php echo htmlspecialchars($subscriber['id']); ?></td>
                                <td><?php echo htmlspecialchars($subscriber['username']); ?></td>
                                <td><?php echo htmlspecialchars($expiry_date_str); ?></td>
                                <td><?php echo $status_badge; ?></td>

                                <td>
                                    <button class="btn btn-sm btn-outline-primary copy-btn" data-link="<?php echo htmlspecialchars($m3u_link); ?>" title="انسخ الرابط">
                                        <i class="fas fa-copy"></i> نسخ
                                    </button>
                                </td>

                                <td>
                                    <a href="#" class="btn btn-sm btn-info"><i class="fas fa-edit"></i> تمديد</a>
                                    <a href="#" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i> حذف</a>
                                </td>
                            </tr>
                            <?php endforeach; ?>
                        <?php endif; ?>
                    </tbody>
                </table>
            <?php endif; ?>
        <?php endif; ?>

        <?php if ($action == 'packages'): ?>
            <div class="alert alert-warning">
                هذا القسم مخصص لإدارة الحزم والباقات (Packages).
            </div>
        <?php endif; ?>

    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const copyButtons = document.querySelectorAll('.copy-btn');
        copyButtons.forEach(button => {
            button.addEventListener('click', function () {
                const linkToCopy = this.getAttribute('data-link');
                const tempInput = document.createElement('input');
                tempInput.value = linkToCopy;
                document.body.appendChild(tempInput);
                tempInput.select();
                document.execCommand('copy');
                document.body.removeChild(tempInput);

                this.classList.remove('btn-outline-primary');
                this.classList.add('btn-success');
                this.innerHTML = '<i class="fas fa-check"></i> تم النسخ';

                setTimeout(() => {
                    this.classList.remove('btn-success');
                    this.classList.add('btn-outline-primary');
                    this.innerHTML = '<i class="fas fa-copy"></i> نسخ';
                }, 2000);
            });
        });
    });
</script>
</body>
</html>
