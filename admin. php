<?php
// admin.php - الكود النهائي والموحد والمحسن (مظهر احترافي وميزات كاملة)

// تفعيل عرض الأخطاء لسهولة التصحيح
error_reporting(E_ALL);
ini_set('display_errors', 1);

session_start();
require_once 'config.php';

// ********** 1. تحديث هيكل قاعدة البيانات لضمان وجود الأعمدة **********
try { 
    $db->exec("ALTER TABLE channels ADD COLUMN category TEXT;");
    $db->exec("ALTER TABLE channels ADD COLUMN user_agent TEXT;");
    $db->exec("ALTER TABLE channels ADD COLUMN token TEXT;");
    $db->exec("ALTER TABLE subscribers ADD COLUMN token TEXT;");
    $db->exec("ALTER TABLE subscribers ADD COLUMN expiry_date TEXT;");
    $db->exec("
        CREATE TABLE IF NOT EXISTS activity_log (
            id INTEGER PRIMARY KEY AUTOINCREMENT,
            user_id INTEGER NOT NULL,
            timestamp INTEGER NOT NULL,
            FOREIGN KEY (user_id) REFERENCES subscribers (id)
        )
    ");
} catch (PDOException $e) { /* تجاهل الأخطاء إذا كانت الأعمدة موجودة بالفعل */ }
// *******************************************************************

// ********** 2. التحقق من تسجيل الدخول **********
if (!isset($_SESSION['user_id']) || $_SESSION['user_id'] != 1) { 
    session_destroy();
    header('Location: index.php');
    exit();
}

$error_message = '';
$success_message = '';
$action = $_GET['action'] ?? 'dashboard';

function generate_token($length = 32) {
    return bin2hex(random_bytes($length / 2));
}

// *** تعريف المتغيرات الافتراضية هنا لتجنب أخطاء Undefined variable ***
$channels = []; 
$users = [];    
$channels_count = 0;
$users_count = 0;
$active_users_count = 0; 


// ********** 3. معالجة إضافة قناة جديدة **********
if ($action == 'add_channel' && $_SERVER['REQUEST_METHOD'] == 'POST') {
    $name = $_POST['name'] ?? '';
    $url = $_POST['url'] ?? '';
    $category = $_POST['category'] ?? 'عام';
    $user_agent = $_POST['user_agent'] ?? 'Mozilla/5.0'; 

    if (!empty($name) && !empty($url)) {
        try {
            $stmt = $db->prepare("SELECT COUNT(id) FROM channels WHERE url = ?");
            $stmt->execute([$url]);
            if ($stmt->fetchColumn() > 0) {
                $error_message = 'هذه القناة (الرابط) موجودة بالفعل.';
            } else {
                $stmt = $db->prepare("INSERT INTO channels (name, url, category, user_agent, enabled, created_at) VALUES (?, ?, ?, ?, 1, datetime('now'))");
                $stmt->execute([$name, $url, $category, $user_agent]);

                $success_message = "تمت إضافة القناة '{$name}' بنجاح.";
                $action = 'channels';
            }
        } catch (PDOException $e) {
            $error_message = 'خطأ في إضافة القناة: ' . $e->getMessage();
        }
    } else {
        $error_message = 'الرجاء إدخال اسم القناة ورابط البث بشكل صحيح.';
    }
}


// ********** 4. معالجة إضافة مشترك جديد **********
if ($action == 'add_subscriber' && $_SERVER['REQUEST_METHOD'] == 'POST') {
    $username = $_POST['username'] ?? '';
    $duration_days = (int)($_POST['duration_days'] ?? 30);

    if (!empty($username) && $duration_days > 0) {
        try {
            $stmt = $db->prepare("SELECT COUNT(id) FROM subscribers WHERE username = ?");
            $stmt->execute([$username]);
            if ($stmt->fetchColumn() > 0) {
                $error_message = 'اسم المستخدم موجود بالفعل. الرجاء اختيار اسم آخر.';
            } else {
                $token = generate_token();
                $expiry_date = date('Y-m-d H:i:s', strtotime("+$duration_days days"));

                $stmt = $db->prepare("INSERT INTO subscribers (username, status, token, created_at, expiry_date) VALUES (?, 'active', ?, datetime('now'), ?)");
                $stmt->execute([$username, $token, $expiry_date]);

                $success_message = "تمت إضافة المشترك بنجاح ({$duration_days} يوم).";
                $action = 'subscribers';
            }
        } catch (PDOException $e) {
            $error_message = 'خطأ في إضافة المشترك: ' . $e->getMessage();
        }
    } else {
        $error_message = 'الرجاء إدخال اسم المستخدم ومدة الاشتراك بشكل صحيح.';
    }
}


// ********** 5. جلب البيانات والإحصائيات **********
try {
    $stmt_channels = $db->prepare("SELECT id, name, url, category, enabled, created_at FROM channels ORDER BY id DESC");
    $stmt_channels->execute();
    $channels = $stmt_channels->fetchAll(PDO::FETCH_ASSOC);
    $channels_count = count($channels);

    $stmt_users = $db->prepare("SELECT id, username, status, token, expiry_date, created_at FROM subscribers ORDER BY id DESC");
    $stmt_users->execute();
    $users = $stmt_users->fetchAll(PDO::FETCH_ASSOC);
    $users_count = count($users);

    $active_users_count = $db->query("SELECT COUNT(id) FROM subscribers WHERE status = 'active'")->fetchColumn();

} catch (PDOException $e) {
    $error_message = 'خطأ في جلب البيانات من قاعدة البيانات: ' . $e->getMessage();
}

// نهاية PHP. يبدأ كود HTML الاحترافي هنا
?>
<!DOCTYPE html>
<html lang="ar" dir="rtl">
